<!DOCTYPE html>
<html>

<head>
    <title>Step by step: Algebra</title>
    <script>
        async function handleSubmit(event){
            event.preventDeafult();
            const form = event.target;
            const formData= new FormData(form);
            const response = await fetch(form.action, { 
                method: form.method,
                body: new URLSearchParams(formData)
            });
            const data = await response.json();
            document.getElementByid('answer').innerText = `${data.processedInput}`;
        }
    </script>
</head>

<body>
    <%- include('layouts/navbar'); -%>
        <h1>Algebruh</h1>
        <form action="/algebra" method="post" onsubmit="handleSubmit(event)">
            <input name="algebruh"></input><br>
            <!-- <input type="button" value="Evaluate" onclick="go()"> -->
            <button type="submit">Evaluate</button>
        </form>

        <button></button>
        <p id="answer"></p>
</body>

</html>